# ============================================
# YUKIO - Local AI Japanese Tutor Configuration
# ============================================
# This configuration is optimized for local setup with:
# - Ollama for LLM and embeddings
# - LanceDB for vector storage (no PostgreSQL needed)
# - Mem0 for conversation memory
# - Dia 1.6B for Japanese TTS (optional)

# ============================================
# Ollama LLM Configuration
# ============================================
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434/v1
LLM_API_KEY=ollama

# Recommended models for Japanese tutoring:
# - qwen2.5:14b-instruct (best quality, needs 16GB+ RAM)
# - llama3.2:latest (good balance)
# - gemma2:9b (lighter option)
LLM_CHOICE=qwen2.5:14b-instruct

# ============================================
# Ollama Embedding Configuration
# ============================================
EMBEDDING_PROVIDER=ollama
EMBEDDING_BASE_URL=http://localhost:11434/v1
EMBEDDING_API_KEY=ollama

# Recommended embedding models:
# - nomic-embed-text (768 dimensions, best for local)
# - mxbai-embed-large (1024 dimensions)
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768

# ============================================
# LanceDB Configuration (Local Vector Database)
# ============================================
# LanceDB runs locally with zero config - just specify the data path
LANCEDB_PATH=./yukio_data/lancedb
LANCEDB_TABLE_NAME=japanese_lessons

# ============================================
# Mem0 Memory Configuration
# ============================================
# Mem0 provides persistent user memory across sessions
MEM0_USER_ID=student_default
MEM0_STORAGE_PATH=./yukio_data/mem0

# ============================================
# Dia TTS Configuration (Optional)
# ============================================
# For Japanese text-to-speech with realistic voices
DIA_ENABLED=false
DIA_MODEL_PATH=./models/dia-1.6b
DIA_DEVICE=cpu  # or cuda for GPU

# ============================================
# Data Paths
# ============================================
# Japanese learning materials (PDFs, textbooks)
JAPANESE_DATA_PATH=./data/japanese
MARKDOWN_OUTPUT_PATH=./data/japanese/markdown

# ============================================
# Application Configuration
# ============================================
APP_ENV=development
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8058

# ============================================
# Chunking Configuration
# ============================================
# Optimized for Japanese text processing
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MAX_CHUNK_SIZE=1500

# ============================================
# Search Configuration
# ============================================
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# ============================================
# Session Configuration
# ============================================
SESSION_TIMEOUT_MINUTES=60
MAX_MESSAGES_PER_SESSION=100

# ============================================
# Debug Configuration
# ============================================
DEBUG_MODE=false
ENABLE_PROFILING=false
